{
  "extends": "@hnine-dev/typescript-config/vite.json",
  "compilerOptions": {
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "/src/*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src",
    "vite.config.ts",
    "vitest.config.ts",
    "vite-env-override.d.ts",
    "vite-env.d.ts"
  ]
}
